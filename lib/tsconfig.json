{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "jsx": "react",
        "resolveJsonModule": true,
        "sourceMap": true,
        "noLib": false,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "composite": true,
        "declarationMap": true,
        "baseUrl": "/",
        "strict": true,
        "allowSyntheticDefaultImports": false,
        "paths": {
            "*": [
                "types/*"
            ]
        },
        "outDir": "./dist",
        "lib": [
            "es6",
            "dom",
            "es2017"
        ],
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "test-configs",
        "src/**/tests/*",
        "**/*.test.ts",
        "dist/**/*"
    ]
}
